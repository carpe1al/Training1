# Local Development Environment
# Copy to .env.local and customize for your local setup
# .env.local is gitignored and safe for secrets

# Application
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# Database (your local PostgreSQL)
DATABASE_URL=postgres://postgres:yourpassword@localhost:5432/training1

# Redis
REDIS_URL=redis://localhost:6379

# Object Storage (MinIO or AWS S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your_minio_access_key
S3_SECRET_KEY=your_minio_secret_key
S3_BUCKET=training1
S3_REGION=us-east-1

# CORS
CORS_ORIGIN_FRONTEND=http://localhost:3000,http://localhost:3001

# Authentication
JWT_SECRET=your_very_secure_jwt_secret_change_this
JWT_EXPIRES_IN=7d
COOKIE_DOMAIN=localhost
SESSION_SECRET=your_very_secure_session_secret

# OAuth/OIDC (your actual credentials)
OIDC_GOOGLE_CLIENT_ID=your-google-client-id
OIDC_GOOGLE_CLIENT_SECRET=your-google-client-secret
OIDC_MICROSOFT_CLIENT_ID=your-microsoft-client-id
OIDC_MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
OIDC_REDIRECT_URI=http://localhost:4000/v1/auth/callback/oidc

# Email (use Mailhog locally or real SMTP)
SMTP_URL=smtp://localhost:1025
SMTP_FROM=dev@training1.local

# SMS (your Twilio credentials)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment (Stripe test mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Search
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Rendering Service
RENDER_EXTERNAL_URL=

# WebRTC
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_CREDENTIAL=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_LIVE_SESSIONS=true
ENABLE_PROCTORING=false

# AI Services (your API keys)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
OPENAI_API_KEY=your-openai-api-key
