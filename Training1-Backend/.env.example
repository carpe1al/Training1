# Application
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/training1

# Redis (sessions & queues)
REDIS_URL=redis://localhost:6379

# Object Storage (S3/MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=training1
S3_REGION=us-east-1

# CORS
CORS_ORIGIN_FRONTEND=http://localhost:3000

# Authentication
JWT_SECRET=change_me_in_production_with_strong_random_string
JWT_EXPIRES_IN=7d
COOKIE_DOMAIN=localhost
SESSION_SECRET=change_me_in_production

# OAuth/OIDC
OIDC_GOOGLE_CLIENT_ID=
OIDC_GOOGLE_CLIENT_SECRET=
OIDC_MICROSOFT_CLIENT_ID=
OIDC_MICROSOFT_CLIENT_SECRET=
OIDC_REDIRECT_URI=http://localhost:4000/v1/auth/callback/oidc

# Email (SMTP)
SMTP_URL=smtp://localhost:1025
SMTP_FROM=noreply@training1.local

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Payment (Stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# Search (OpenSearch/Elasticsearch)
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Video Processing (FFmpeg)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Rendering Service
RENDER_EXTERNAL_URL=

# WebRTC (live sessions)
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_CREDENTIAL=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_LIVE_SESSIONS=true
ENABLE_PROCTORING=false