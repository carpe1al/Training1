# Local Development Environment
# Copy to .env.local and customize for your local setup
# .env.local is gitignored and safe for secrets

# API Backend
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# Application
NEXT_PUBLIC_APP_NAME=Training1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_secure_nextauth_secret_change_this

# OAuth Providers (your actual credentials)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Stripe (your test publishable key)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Analytics (your tracking IDs)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Media/CDN
NEXT_PUBLIC_CDN_URL=http://localhost:9000/training1

# Feature Flags
NEXT_PUBLIC_ENABLE_LIVE_SESSIONS=true
NEXT_PUBLIC_ENABLE_PROCTORING=false
NEXT_PUBLIC_ENABLE_SOCIAL_AUTH=true

# WebRTC
NEXT_PUBLIC_STUN_SERVER=stun:stun.l.google.com:19302
